@model MVCApp1.Models.Registrado
@using MVCApp1.Models;
@using MVCApp1.Services;
@{

    List<Direcciones> direccion;
    ServiceDireccion DAdireccion = new ServiceDireccion();


    //var direccion = new Direccion();

    //comunicacion http api rest
    //comunicacion a un metodos de una clase

    //direccion.IdRegistrado = Model.IdRegistrado;
    //direccion.Nombres = Model.NombresCompletos;

    direccion = DAdireccion.GetDireccionesByIdRegistrado(Model.IdRegistrado.ToString());


}


<h2>DIRECCIONES DEL REGISTRADO</h2>

<p>
    @Html.ActionLink("Nueva Direccion", "Create", "Direccion", new { Model.IdRegistrado })
</p>


<table class="table">

    <tr>
        <th>
           <label>Secuencial</label>
        </th>
        <th>
            <label>Direccion del Registrado</label>
        </th>
    </tr>

    @foreach (var item in direccion)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdDirecciones)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
        </tr>
    }

</table>